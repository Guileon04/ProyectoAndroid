<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradiente vertical -->
    <gradient
        android:startColor="@color/verde_claro"
        android:endColor="@color/verde_oscuro"
        android:angle="90"/>

    <!-- Bordes redondeados -->
    <corners android:radius="12dp"/>

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
