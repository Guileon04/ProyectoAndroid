<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <ImageView
            android:id="@+id/closeButton"
            android:layout_marginTop="30sp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cancelar"
            android:contentDescription="Cerrar"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserva de Actividades"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona tu clase de hoy"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="24dp" />

        <!-- ==================== TARJETA 1 ==================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BODY PUMP"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:30 - 19:15 | Sala 1"
                    android:textColor="@color/orange" />

                <Button
                    android:id="@+id/btnConfirmarReserva1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/orange"
                    android:text="RESERVAR AHORA" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== TARJETA 2 ==================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOGA"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:30 - 20:15 | Sala 2"
                    android:textColor="@color/orange" />

                <Button
                    android:id="@+id/btnConfirmarReserva2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/orange"
                    android:text="RESERVAR AHORA" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== TARJETA 3 ==================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPINNING"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:30 - 21:15 | Sala 1"
                    android:textColor="@color/orange" />

                <Button
                    android:id="@+id/btnConfirmarReserva3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/orange"
                    android:text="RESERVAR AHORA" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== TARJETA 4 ==================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZUMBA"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:30 - 22:15 | Sala 3"
                    android:textColor="@color/orange" />

                <Button
                    android:id="@+id/btnConfirmarReserva4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/orange"
                    android:text="RESERVAR AHORA" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
