<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen decorativa -->
        <ImageView
            android:id="@+id/logoHotel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hoteel"
            android:contentDescription="Logo del hotel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Título -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserva tu habitación"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/logoHotel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre completo"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Escribe tu nombre"
            app:layout_constraintTop_toBottomOf="@id/textNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Correo -->
        <TextView
            android:id="@+id/textCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/editNombre"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editCorreo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Escribe tu correo"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/textCorreo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ciudad -->
        <TextView
            android:id="@+id/textCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad de destino"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/editCorreo"
            app:layout_constraintStart_toStartOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/autoCiudad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Selecciona ciudad"
            app:layout_constraintTop_toBottomOf="@id/textCiudad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tipo de habitación -->
        <TextView
            android:id="@+id/textTipoHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de habitación"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/autoCiudad"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/groupTipoHabitacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textTipoHabitacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radioIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Individual" />

            <RadioButton
                android:id="@+id/radioDoble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doble"
                android:layout_marginStart="16dp" />

            <RadioButton
                android:id="@+id/radioSuite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suite"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Servicios -->
        <TextView
            android:id="@+id/textServicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicios adicionales"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/groupTipoHabitacion"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layoutServicios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textServicios"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <CheckBox
                android:id="@+id/checkDesayuno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desayuno incluido" />

            <CheckBox
                android:id="@+id/checkSpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spa y gimnasio" />

            <CheckBox
                android:id="@+id/checkTransporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transporte al aeropuerto" />
        </LinearLayout>

        <!-- Pago -->
        <ToggleButton
            android:id="@+id/togglePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Pago anticipado"
            android:textOff="Pago al llegar"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutServicios"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Botón -->
        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirmar reserva"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/togglePago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

