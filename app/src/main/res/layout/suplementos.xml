<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUPLEMENTOS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="38sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CERRAR -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/cancelar"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="20sp"
            android:padding="8sp">

            <!-- ===== CARD 1: CREATINA ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="103dp"
                        android:src="@drawable/creatina" />

                    <TextView
                        android:text="Creatina"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/menosCreatina"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/negativo"/>

                        <TextView
                            android:id="@+id/cantidadCreatina"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/masCreatina"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mas"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== CARD 2: PROTEÍNA ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="103dp"
                        android:src="@drawable/proteina" />

                    <TextView
                        android:text="Proteina"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                           android:id="@+id/menosProte"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/negativo"/>

                        <TextView
                            android:id="@+id/cantidadProteina"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/masProteina"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mas"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== CARD 3: BCAA ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="103dp"
                        android:src="@drawable/bcaa" />

                    <TextView
                        android:text="BCAA"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/menosBcaa"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/negativo"/>

                        <TextView
                            android:id="@+id/cantidadBcaa"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/masBcaa"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mas"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== CARD 4: PRE WORKOUT ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="103dp"
                        android:src="@drawable/pre" />

                    <TextView
                        android:text="PRE WORKOUT"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                           android:id="@+id/menosPre"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/negativo"/>

                        <TextView
                            android:id="@+id/cantidadPre"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/masPre"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mas"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- ===== CARD 5: GLUTAMINA ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="103dp"
                        android:src="@drawable/glu" />

                    <TextView
                        android:text="GLUTAMINA"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/menosGlu"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/negativo"/>

                        <TextView
                            android:id="@+id/cantidadGlu"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/masGlu"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mas"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== CARD 6: OMEGA 3 ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="103dp"
                        android:src="@drawable/omega" />

                    <TextView
                        android:text="OMEGA 3"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/menosOmega"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/negativo"/>

                        <TextView
                            android:id="@+id/cantidadOmega"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/masOmega"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mas"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
